<% if logged_in? %>
  <div class="center jumbotron">
    <div class='text-center'>
      <h1>新しいメニューを投稿する</h1>
      <%= link_to '投稿', new_menu_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the PFC-logger</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

<!-- 検索機能　-->
<div class="row">
    <div class="col-sm-6 offset-sm-3">
    <%= form_tag(root_path, :method => 'get') do %>
        <div class="input-group">
            <%= text_field_tag :search, params[:search], placeholder: "メニュー検索", class: "form-control" %>
            <span class="input-group-btn"><%= submit_tag '検索', :name => nil, class: "btn btn-primary" %></span>
        </div>
    <% end %>
    </div>
</div>

<div>
  <%= render 'menus/menus', menus: @menus %>
</div>